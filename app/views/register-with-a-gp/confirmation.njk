{% extends 'layout-transactional.njk' %}

{% block pageTitle %}
  Register with a GP - Confirmation
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">

      <div class="nhsuk-panel nhsuk-!-margin-top-0 nhsuk-!-margin-bottom-6">
        <h1 class="nhsuk-panel__title">
            Application complete
          </h1>
          <div class="nhsuk-panel__body">
            Your reference number
            <br><strong>HDJ2123F</strong>
          </div>
      </div>

      <div class="nhsuk-u-reading-width">
        <h2>What happens next</h2>
        <p>To complete registration, go to Rose Medical Practice with:</p>
        <ol>
          <li><strong>Photo ID</strong><br> Like a passport or driver's licence</li>
          <li><strong>Proof of address</strong><br> A bill less than three months old (gas, electric or council tax)</li>
          <li><strong>Your NHS number</strong><br> Find it on prescriptions or doctors / hospital letters </li>
        </ol>
      </div>

    </div>
  </div>
{% endblock %}
