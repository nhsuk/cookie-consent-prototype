{% extends 'layout-transactional.njk' %}

{% block pageTitle %}
  Register with a GP - Have you ever had any of these conditions?
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">

    <form action="/register-with-a-gp/check-your-answers">

      {{ checkboxes({
        "name": "conditions",
        "fieldset": {
          "legend": {
            text: "Have you ever had any of these conditions?",
            classes: "nhsuk-fieldset__legend--l",
            isPageHeading: true
          }
        },
        "hint": {
          "text": "Select all that apply."
        },
        "items": [
          {
            "value": "1",
            "name": "Asthma",
            "text": "Asthma"
          },
          {
            "value": "1",
            "name": "Cancer",
            "text": "Cancer"
          },
          {
            "value": "1",
            "name": "Lung disease (like emphysema or bronchitis)",
            "text": "Lung disease (like emphysema or bronchitis)"
          },
          {
            "value": "1",
            "name": "Diabetes",
            "text": "Diabetes"
          },
          {
            "value": "1",
            "name": "Disabilities, including physical and learning disabilities",
            "text": "Disabilities, including physical and learning disabilities"
          },
          {
            "value": "1",
            "name": "Epilepsy",
            "text": "Epilepsy"
          },
          {
            "value": "1",
            "name": "Heart Disease",
            "text": "Heart Disease"
          },
          {
            "value": "1",
            "name": "High blood pressure",
            "text": "High blood pressure"
          },
          {
            "value": "1",
            "name": "Mental health issues, such as depression",
            "text": "Mental health issues, such as depression"
          },
          {
            "value": "1",
            "name": "Stroke or mini stroke",
            "text": "Stroke or mini stroke"
          },
          {
            "value": "1",
            "name": "Thyroid problems",
            "text": "Thyroid problems"
          }
        ]
      }) }}

      {{ button({
        "text": "Continue"
      }) }}

    </form>

    {{ backLink({
      "href": "/register-with-a-gp/check-your-answers",
      "text": "Back to my answers"
    }) }}

    </div>
  </div>
{% endblock %}
