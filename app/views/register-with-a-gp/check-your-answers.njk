{% extends 'layout-transactional.njk' %}

{% block pageTitle %}
  Register with a GP - Check your answers
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">

      <h1>
        Check your answers before sending your application
      </h1>

      <!-- only add a heading for a list if there is more than one list -->
      <h2>
        Personal details
      </h2>

      <!-- use additional modifier class to change column widths for multiple groups of questions and answers: -->
      <!--   * `app-check-your-answers--short` for short questions -->
      <!--   * `app-check-your-answers__questions-long` for long questions -->
      <!--   * none for single group of q&a -->
      <dl class="app-check-your-answers app-check-your-answers--short">

        <div class="app-check-your-answers__contents">
          <dt class="app-check-your-answers__question">
            NHS number
          </dt>
          <dd class="app-check-your-answers__answer">
            <span data-name="nhs-number"></span>
          </dd>
          <dd class="app-check-your-answers__change">
            <a href="/register-with-a-gp/page-3">
              Change<span class="nhsuk-u-visually-hidden"> NHS number</span>
            </a>
          </dd>
        </div>

        <div class="app-check-your-answers__contents">
          <dt class="app-check-your-answers__question">
            Name
          </dt>
          <dd class="app-check-your-answers__answer">
            <span data-name="first-name"></span> <span data-name="middle-name"></span> <span data-name="last-name"></span>
          </dd>
          <dd class="app-check-your-answers__change">
            <a href="/register-with-a-gp/page-4">
              Change<span class="nhsuk-u-visually-hidden"> name</span>
            </a>
          </dd>
        </div>

        <div class="app-check-your-answers__contents">
          <dt class="app-check-your-answers__question">
            Date of birth
          </dt>
          <dd class="app-check-your-answers__answer">
            <span data-name="dob-day"></span>/<span data-name="dob-month"></span>/<span data-name="dob-year-error"></span>
          </dd>
          <dd class="app-check-your-answers__change">
            <a href="/register-with-a-gp/page-5">
              Change<span class="nhsuk-u-visually-hidden"> date of birth</span>
            </a>
          </dd>
        </div>

        <div class="app-check-your-answers__contents">
          <dt class="app-check-your-answers__question">
            Home address
          </dt>
          <dd class="app-check-your-answers__answer">
            <span data-name="address-line-1"></span><br>
            <span data-name="address-line-2"></span><br>
            <span data-name="address-town"></span><br>
            <span data-name="address-county"></span><br>
            <span data-name="address-postcode"></span>
          </dd>
          <dd class="app-check-your-answers__change">
            <a href="/register-with-a-gp/page-6">
              Change<span class="nhsuk-u-visually-hidden"> home address</span>
            </a>
          </dd>
        </div>

      </dl>

      <h2>
        Medical details
      </h2>

      <dl class="app-check-your-answers app-check-your-answers--short">

        <div class="app-check-your-answers__contents">
          <dt class="app-check-your-answers__question">
            Regular medication
          </dt>
          <dd class="app-check-your-answers__answer">
            
          </dd>
          <dd class="app-check-your-answers__change">
            <a href="/register-with-a-gp/page-3">
              Change<span class="nhsuk-u-visually-hidden"> regular medication</span>
            </a>
          </dd>
        </div>

      </dl>


      <h2>Now send you application</h2>
      <p>By submitting this notification you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>
      <p>Your details with be sent to Rose Medical Practice to begin your registration.</p>

      <a href="/register-with-a-gp/confirmation" class="nhsuk-button">Accept and send registration</a>

    </div>
  </div>
{% endblock %}
