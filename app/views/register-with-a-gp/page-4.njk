{% extends 'layout-transactional.njk' %}

{% block pageTitle %}
  Register with a GP - What is your name?
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">

    <form action="/register-with-a-gp/page-5">

      {% call fieldset({
        legend: {
          text: "What is your name?",
          classes: "nhsuk-fieldset__legend--l",
          isPageHeading: true
        }
      }) %}

      {{ input({
        "label": {
          "text": "First name"
        },
        "id": "first-name",
        "name": "first-name",
        "classes": "nhsuk-u-width-three-quarters"
      }) }}

      {{ input({
        "label": {
          "text": "Middle name"
        },
        "id": "middle-name",
        "name": "middle-name",
        "classes": "nhsuk-u-width-three-quarters"
      }) }}

      {{ input({
        "label": {
          "text": "Last name"
        },
        "id": "last-name",
        "name": "last-name",
        "classes": "nhsuk-u-width-three-quarters"
      }) }}

      {% endcall %}

      {{ button({
        "text": "Continue"
      }) }}

    </form>

    {{ backLink({
      "href": "/register-with-a-gp/page-3",
      "text": "Change my previous answer"
    }) }}

    </div>
  </div>
{% endblock %}
