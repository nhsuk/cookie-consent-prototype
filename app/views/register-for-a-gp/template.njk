{% extends 'layout.njk' %}

{% block pageTitle %}
  NHS.UK - Register at the Rose Medical Practice
{% endblock %}

{% block header %}
  {{ header({
    "showNav": "true",
    "showSearch": "true",
    "primaryLinks": [
      {
        "url"  : "https://www.nhs.uk/conditions",
        "label" : "Health A-Z"
      },
      {
        'url' : 'https://www.nhs.uk/live-well/',
        'label' : 'Live Well'
      },
      {
        'url'  : 'https://www.nhs.uk/conditions/social-care-and-support/',
        'label' : 'Care and support'
      },
      {
        'url'  : 'https://www.nhs.uk/news/',
        'label' : 'Health news'
      },
      {
        'url' : 'https://www.nhs.uk/service-search',
        'label' : 'Services near you'
      }
    ]
    })
  }}
{% endblock %}

{% block beforeContent %}
  {{ breadcrumb({
    text: "Home",
    href: "/"
  }) }}
{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">
      <h1>Register at the Rose Medical Practice</h1>
      <p>To register we will ask you for information about yourself including:</p>
      <ul>
        <li>your NHS number - if you know it</li>
      </ul>
      <p>This is to help Rose Medical Practice find your medical records.</p>
      <a href="#" class="nhsuk-button btn nhsuk-!-margin-bottom-0">Start now</a>
      <hr>
      <h2 class="nhsuk-heading-m">How we handle your personal information</h2>
      <p>Only Rose Medical Practice sees the personal information you put in this application. We send it to them securely so they can add it to your medical record.</p>
      <p>We do not store it for any other reason.</p>
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ footer({
    "showLogo": "true",
    "primaryLinks": [
      {
        "url": "https://www.nhs.uk/about-us",
        "label": "About us"
      },
      {
        "url": "https://www.nhs.uk/contact-us/",
        "label": "Contact us"
      },
      {
      "url": "https://www.nhs.uk/about-us/sitemap/",
      "label": "Sitemap"
    },
    {
      'url': 'https://www.nhs.uk/accessibility/',
      'label': 'Accessibility'
    },
    {
      "url": "https://www.nhs.uk/our-policies/",
      "label": "Our policies"
    }
    ]
  })}}
{% endblock %}
